@model FRSS.Models.userinfomodel
@using FRSS.Utility
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
        background-color: #008d4c;
        color: white;
    }

    .dropdown-menu > li > a {
        color: white;
    }
</style>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                @using (Html.BeginForm("formuserinfo", "userinfo", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(p => p.infoid)
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <h3 class="box-title" id="headertext">User Information</h3>
                        </div>

                        <!-- /.box-header -->
                        <div class="box-body">
                            <div id="divUserGroupErrorMessage">
                                @if (ViewBag.Error != null)
                                {
                                    <h4 class="box-alert" style="color: red; margin-left: 10px;">@ViewBag.Error</h4>
                                }
                            </div>


                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Company Code</label>
                                        @Html.TextBoxFor(m => m.compcode, new { @class = "form-control", @placeholder = "Company Code", @required = "required" })

                                        @Html.ValidationMessageFor(s => s.compcode, null, new { style = "color: red" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Company Name</label>
                                        @Html.TextBoxFor(m => m.compname, new { @class = "form-control", @placeholder = "Company Name", @required = "required" })

                                        @Html.ValidationMessageFor(s => s.compname, null, new { style = "color: red" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    &nbsp;
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Address 1</label>
                                        @Html.TextBoxFor(m => m.compaddr1, new { @class = "form-control", @placeholder = "Address" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Address 2</label>
                                        @Html.TextBoxFor(m => m.compaddr2, new { @class = "form-control", @placeholder = "Address" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    &nbsp;
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Address 3</label>
                                        @Html.TextBoxFor(m => m.compaddr3, new { @class = "form-control", @placeholder = "Address" })
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>City</label>
                                        @Html.TextBoxFor(m => m.compcity, new { @class = "form-control", @placeholder = "City" })
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Pincode</label>
                                        @Html.TextBoxFor(m => m.compzip, new { @class = "form-control", @placeholder = "Pincode", @type = "number" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    &nbsp;
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>State</label>
                                        @Html.TextBoxFor(m => m.compstate, new { @class = "form-control", @placeholder = "State" })
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Country</label>
                                        @Html.TextBoxFor(m => m.compcontry, new { @class = "form-control", @placeholder = "Country" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    &nbsp;
                                </div>
                                <div class="col-md-4">
                                    &nbsp;
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Tel. No.</label>
                                        @Html.TextBoxFor(m => m.compphone, new { @class = "form-control", @placeholder = "Contact No" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Mobile No</label>
                                        @Html.TextBoxFor(m => m.compmobile1, new { @class = "form-control", @placeholder = "Mobile No" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    &nbsp;
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Email id</label>
                                        @Html.TextBoxFor(m => m.compemail, new { @class = "form-control", @placeholder = "Email Id" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Website</label>
                                        @Html.TextBoxFor(m => m.compweb, new { @class = "form-control", @placeholder = "website" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    &nbsp;
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2 btn-padding-right">
                                        <input type="submit" class="btn btn-block btn-info " value="Save" />
                                    </div>
                                    <div class="col-md-2 btn-padding-right">
                                        <a href="@Url.Action("AdminDashboard", "Home")" class="btn btn-block btn-danger">Cancel</a>
                                    </div>
                                    <div class="col-md-8">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                }
            </div>
        </div>
    </div>
</section>


<script>
    $(document).ready(function () {
        $('#regdate').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            setDate: new Date()
        });

        $(".sidebar-menu li").removeClass('active');
        $("#liadministrator").addClass("active");
        $("#liuserinformation").addClass("active");
    })
</script>

