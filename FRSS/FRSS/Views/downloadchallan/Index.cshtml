
@using Business
@using FRSS.Utility
@model IEnumerable<Business.mstchallandown>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
        background-color: #008d4c;
        color: white;
    }

    .dropdown-menu > li > a {
        color: white;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Challan  List
        @ViewBag.Month
        @ViewBag.Year
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    @Html.Partial("~/Views/Shared/_ErrorMessage.cshtml")
                    <div class="col-md-8">
                        &nbsp;
                    </div>
                    <div class="col-md-2 btn-padding-right">
                        @if (ProjectSession.addrights == true)
                        {
                            <a href="@(Url.Action("OprFileManager", "filemanager"))" class="btn btn-block btn-info"><i class="fa fa-plus"></i> Add </a>
                        }
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-striped" id="example1">
                        <thead>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.id)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.filename)
                                </td>
                                @*<td>
                                    @Html.DisplayNameFor(model => model.filedate)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.compname)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.finyear)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.filetitle)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.catname)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.subcatname)
                                </td>*@
                                <td>Action</td>
                            </tr>
                        </thead>

                        @foreach (mstchallandown item in (List<mstchallandown>)ViewBag.ChallanList)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.filename)
                            </td>   
                            <td>            
                                    <a href="~/downloadChallan/DownloadFile?id=@item.id" title="Download"><span class="glyphicon glyphicon-edit"></span></a>                                
                            </td>
                        </tr>
                        }

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- /.modal -->
<script>
    $(function () {
        $('#example1').DataTable({
            //'paging': false,
            //'lengthChange': false,
            //'searching': true,
            //'ordering': true,
            //'info': false,
            //'autoWidth': false
        });

        $(".sidebar-menu li").removeClass('active');
        $("#litransaction").addClass("active");
        $("#lifileupdate").addClass("active");
    })
</script>

