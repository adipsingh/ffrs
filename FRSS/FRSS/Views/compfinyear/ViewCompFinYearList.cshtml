@using Business
@using FRSS.Utility
@model IEnumerable<FRSS.Models.compfinyearmodel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
        background-color: #008d4c;
        color: white;
    }

    .dropdown-menu > li > a {
        color: white;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Company Financial Year Master
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    @Html.Partial("~/Views/Shared/_ErrorMessage.cshtml")
                    <div class="col-md-8">
                        &nbsp;
                    </div>
                    <div class="col-md-2 btn-padding-right">
                        @if (ProjectSession.addrights == true)
                        {
                            <a href="@(Url.Action("formcompfinyear", "compfinyear"))" class="btn btn-block btn-info"><i class="fa fa-plus"></i> Add </a>
                        }
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-striped" id="example1">
                        <thread>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.compfinid)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.compcode)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.compname)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.finyear)
                                </td>
                                <td>Action</td>
                            </tr>
                        </thread>

                        @foreach (compfinyearlist item in (List<compfinyearlist>)ViewBag.CompFinYearList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.compfinid)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.compcode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.compname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.finyear)
                                </td>
                                <td>
                                    @if (ProjectSession.editrights == true)
                                    {
                                        <a href="~/compfinyear/formcompfinyear?id=@item.compfinid" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                                    }
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- /.modal -->
<script>
    $(function () {
        $('#example1').DataTable({
            'paging': false,
            'lengthChange': false,
            'searching': true,
            'ordering': true,
            'info': false,
            'autoWidth': false
        });

        $(".sidebar-menu li").removeClass('active');
        $("#limaster").addClass("active");
        $("#lifinyearmaster").addClass("active");
    })
</script>
