
@model FRSS.Models.compmastermodel
@using FRSS.Utility
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
        background-color: #008d4c;
        color: white;
    }

    .dropdown-menu > li > a {
        color: white;
    }
</style>

<!-- Content Header (Page header) -->
@*<section class="content-header">
        <h1>
            Company Master
        </h1>
    </section>*@

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                @using (Html.BeginForm("formcompmaster", "compmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(p => p.compid)
                    <div class="box box-warning">
                        <div class="box-header with-border">

                            @*@if (!string.IsNullOrEmpty(Model.compid) && Convert.ToString(Model.compid) != "")
                            {
                                <h3 class="box-title" id="headertext">Edit Company</h3>
                            }
                            else
                            {*@
                                <h3 class="box-title" id="headertext">Add Company </h3>
                            @*  *@}

                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div id="divUserGroupErrorMessage">
                                @Html.Partial("~/Views/Shared/_ErrorMessage.cshtml")
                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Company Code</label>
                                        @Html.TextBoxFor(m => m.compcode, new { @class = "form-control", @placeholder = "Company Code" ,@required="required"})
                                        @Html.ValidationMessageFor(m => m.compcode, null, new { style = "color: red" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Company Name</label>
                                        @Html.TextBoxFor(m => m.compname, new { @class = "form-control", @placeholder = "Company Name", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.compname, null, new { style = "color: red" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        &nbsp;
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="box-header with-border box-header-new">
                                        <h3 class="box-title" id="headertext">Address Details</h3>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Address 1</label>
                                                @Html.TextBoxFor(m => m.compaddr1, new { @class = "form-control", @placeholder = "Address 1" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Address 2</label>
                                                @Html.TextBoxFor(m => m.compaddr2, new { @class = "form-control", @placeholder = "Address 2" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Address 3</label>
                                                @Html.TextBoxFor(m => m.compaddr3, new { @class = "form-control", @placeholder = "Address 3" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Area</label>
                                                @Html.TextBoxFor(m => m.area, new { @class = "form-control", @placeholder = "Area" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>City</label>
                                                @Html.TextBoxFor(m => m.compcity, new { @class = "form-control", @placeholder = "City" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Pincode</label>
                                                @Html.TextBoxFor(m => m.compzip, new { @class = "form-control", @placeholder = "Pincode",@type="number" })
                                                @Html.ValidationMessageFor(m => m.compcode, null, new { style = "color: red" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>State</label>
                                                @Html.TextBoxFor(m => m.compstate, new { @class = "form-control", @placeholder = "State" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Country</label>
                                                @Html.TextBoxFor(m => m.compcontry, new { @class = "form-control", @placeholder = "Country" })
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="box-header with-border box-header-new">
                                        <h3 class="box-title" id="headertext">Contact Details</h3>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Phone No</label>
                                                @Html.TextBoxFor(m => m.compphone, new { @class = "form-control", @placeholder = "Phone No", @type = "number" })
                                                @Html.ValidationMessageFor(m => m.compphone, null, new { style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>FAX No</label>
                                                @Html.TextBoxFor(m => m.faxno, new { @class = "form-control", @placeholder = "Fax No", @type = "number" })
                                                @Html.ValidationMessageFor(m => m.faxno, null, new { style = "color: red" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Mobile No 1</label>
                                                @Html.TextBoxFor(m => m.compmobile1, new { @class = "form-control", @placeholder = "Mobile No", @type = "number", @required = "required" })
                                                @Html.ValidationMessageFor(m => m.compmobile1, null, new { style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Mobile No 2</label>
                                                @Html.TextBoxFor(m => m.compmobile2, new { @class = "form-control", @placeholder = "Mobile No", @type = "number" })
                                                @Html.ValidationMessageFor(m => m.compmobile2, null, new { style = "color: red" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Email Id</label>
                                                @Html.TextBoxFor(m => m.compemail, new { @class = "form-control", @placeholder = "Email Id" , @required="required"})
                                                @Html.ValidationMessageFor(m => m.compemail, null, new { style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Web Address</label>
                                                @Html.TextBoxFor(m => m.compweb, new { @class = "form-control", @placeholder = "Web Address" })
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="box-header with-border box-header-new">
                                        <h3 class="box-title" id="headertext">Other Details</h3>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>PAN No</label>
                                                @Html.TextBoxFor(m => m.comppanno, new { @class = "form-control", @placeholder = "PAN No" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>TAN No</label>
                                                @Html.TextBoxFor(m => m.tanno, new { @class = "form-control", @placeholder = "TAN No" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Registration Date</label>
                                                <div class="input-group date">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </div>
                                                    <input type="text"
                                                           class="form-control pull-right"
                                                           data-parsley-required="true"
                                                           data-parsley-required-message="Regi. Date is required"
                                                           autocomplete="off"
                                                           name="regdate" id="regdate" value="@Model.regdate"
                                                           placeholder="Registration Date">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Registration No</label>
                                                @Html.TextBoxFor(m => m.regno, new { @class = "form-control", @placeholder = "Registration No" })

                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-1">
                                            <div class="form-group">
                                                <label>State code</label>
                                                @Html.TextBoxFor(m => m.compstatecode, new { @class = "form-control", @placeholder = "State Code", @type = "number" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>GSTIN</label>
                                                @Html.TextBoxFor(m => m.compgstno, new { @class = "form-control", @placeholder = "GSTIN No" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                &nbsp;
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                &nbsp;
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                &nbsp;
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-8">
                                        &nbsp;
                                    </div>
                                    <div class="col-md-2 btn-padding-right">
                                        <input type="submit" class="btn btn-block btn-info " value="Save" />
                                    </div>
                                    <div class="col-md-2 btn-padding-right">
                                        <a href="@Url.Action("ViewCompList", "compmaster")" class="btn btn-block btn-danger">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                }
            </div>
        </div>
    </div>
</section>


<script>
    $(document).ready(function () {
        $('#regdate').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            setDate: new Date()
        });

        $(".sidebar-menu li").removeClass('active');
        $("#limaster").addClass("active");
        $("#licompmaster").addClass("active");
    })
</script>



