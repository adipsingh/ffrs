<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p id="testID">Some text in the modal.</p>
                <input class="form-control" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Email" name="Email" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                <span class="field-validation-valid text-danger" id="emailValidationMessage" style="display:none">Enter valid Email</span>

            </div>
            <div class="modal-footer">
                <button type="button" id="SendEmail" class="btn btn-default">Send</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<!-- /.modal -->
<script src="~/CommonJS/emailValidator.js"></script>
<script>
    
    $(function () {

        $(document).on("click", ".open-email", function () {
            var myBookId = $(this).data('id');
            $(".modal-body #testID").text(myBookId);
            // As pointed out in comments, 
            // it is unnecessary to have to manually call the modal.
             $('#addBookDialog').modal('show');
        });

        $(document).on("click", "#SendEmail", function () {
            debugger            
            var email = $(".modal-body #Email").val();
            if (validateEmail(email)) {

                var fileid = $(".modal-body #testID").text();
                $('#emailValidationMessage').hide();
                $.ajax({
                    method: "get",
                    url: "/filemanager/SendEmail",
                    data: {
                        fileid: fileid, email: email 
                    },
                    success: function (id) {
                        $('#myModal').modal('hide');
                        $('#NonBussinessDay').val('');
                        $('#Reason').val('');
                        alert("Data Saved");
                        $('#NonBusDayTBody').append(' <tr id="NonBusDay_' + id + '">'
                            + '<td>' + date + '</td>' + '<td>' + reason + '</td>'
                            + '<td><a href="javascript:void(0)" onclick="RemoveOffDays(' + id + ')"> Remove </a></td></tr>'

                        );
                    }
                });
                $('#myModal').modal('hide');
            }
            else {
                // error 
                $('#emailValidationMessage').show();
            }
            
        });
        
        $('#example1').DataTable({
            'paging': false,
            'lengthChange': false,
            'searching': true,
            'ordering': true,
            'info': false,
            'autoWidth': false
        });

        $(".sidebar-menu li").removeClass('active');
        $("#litransaction").addClass("active");
        $("#lifileupdate").addClass("active");
    })
</script>
