@using Business
@using FRSS.Utility
@model IEnumerable<FRSS.Models.filemanagermodel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
        background-color: #008d4c;
        color: white;
    }

    .dropdown-menu > li > a {
        color: white;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        File Manager List
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    @Html.Partial("~/Views/Shared/_ErrorMessage.cshtml")
                    <div class="col-md-8">
                        &nbsp;
                    </div>
                    <div class="col-md-2 btn-padding-right">
                        @if (ProjectSession.addrights == true)
                        {
                            <a href="@(Url.Action("OprFileManager", "filemanager"))" class="btn btn-block btn-info"><i class="fa fa-plus"></i> Add </a>
                        }
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-striped" id="example1">
                        <thread>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.fileid)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.filecode)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.filedate)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.compname)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.finyear)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.filetitle)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.catname)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.subcatname)
                                </td>
                                <td>Edit</td>
                                <td>Email</td>
                            </tr>
                        </thread>

                        @foreach (filemanagercomplist item in (List<filemanagercomplist>)ViewBag.FileManagerList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fileid)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.filecode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.filedate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.compname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.finyear)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.filetitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.catname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.subcatname)
                                </td>
                                <td>
                                    @if (ProjectSession.editrights == true)
                                    {
                                        <a href="~/filemanager/oprfilemanager?id=@item.fileid" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                                    }
                                </td>
                                <td>
                                    @if (ProjectSession.editrights == true)
                                    {
                                        <a Email" data-id="@item.fileid"  data-toggle="modal" data-target="#myModal" class="open-email"><span class="glyphicon glyphicon-edit"></span></a>
                                        @*<a data-toggle="modal" data-id="@item.fileid" title="Email" class="open-email btn btn-primary" href="#addBookDialog">test</a>
                                        <button type="button" class="btn btn-info btn-lg open-email" data-id="@item.fileid"  data-toggle="modal" data-target="#myModal">Open Modal</button>*@
                                    }
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->



