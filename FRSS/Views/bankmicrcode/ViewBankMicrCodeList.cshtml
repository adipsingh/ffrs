@using Business
@using FRSS.Utility
@model IEnumerable<FRSS.Models.bankmicrcodemodel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
        background-color: #008d4c;
        color: white;
    }

    .dropdown-menu > li > a {
        color: white;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Company Financial Year Master
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    @Html.Partial("~/Views/Shared/_ErrorMessage.cshtml")
                    <div class="col-md-8">
                        &nbsp;
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-striped" id="example1">
                        <thead>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.codeid)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.bankname)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.ifsccode)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.micrcode)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.branchname)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.bankaddress)
                                </td>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (bankmicrcode item in (List<bankmicrcode>)ViewBag.BankMICRCodeList)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.codeid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bankname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ifsccode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.micrcode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.branchname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bankname)
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- /.modal -->
<script>
    $(function () {
        $('#example1').DataTable({
            //'paging': false,
            //'lengthChange': false,
            //'searching': true,
            //'ordering': true,
            //'info': false,
            //'autoWidth': false
        });

        $(".sidebar-menu li").removeClass('active');
        $("#litransaction").addClass("active");
        $("#libankmicrcode").addClass("active");
    })
</script>
